<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Activity.StudentDetailActivity">
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@+id/img"
        android:id="@+id/txtID"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txtName"
        android:layout_toRightOf="@+id/img"
        android:text="Name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtAge"
        android:layout_toRightOf="@+id/img"
        android:layout_below="@+id/txtName"
        android:text="Age: 15"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt"
        android:layout_toRightOf="@+id/img"
        android:layout_below="@+id/txtAge"
        android:text="Class: 10A"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtdes"
        android:layout_below="@+id/img"
        android:text="OTHER INFO....OTHER INFO....OTHER INFO....OTHER INFO....OTHER INFO....OTHER INFO....OTHER INFO...."
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="RETROFIT HERE WITH ID TO GET ALL STUDENT DETAIL"/>

</RelativeLayout>